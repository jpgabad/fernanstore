<%- include('partials/header'); -%>

<link href="/css/product.css" rel="stylesheet">

<%- include('partials/navigation'); -%>


<section>
      <div class="container-fluid">
        <div class="row"> 
          
          <div class="col-lg-10 ml-auto">
            <div class="row pt-5 mt-3 mb-5">
              
              <div class="col-md-12">

                <!-- CONTENT HERE -->
                <h1>Product</h1>
                <hr>

                <div class="card">
                    <div class="card-body">

                        <div class="product-icon">
                            <i class="fa fa-archive fa-3x" aria-hidden="true" ></i>
                            Total Products<br>
                            <span>2,000</span>
                        </div>

                        
                     
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">

                        <div class="product-table justify-content-between">
                            <span>Product</span> 

                            <div class="product-table-right mb-2">

                                <form class="form-inline">
                                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                                </form>

                            
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>

                                <!-- modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                      <div class="modal-content">

                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLabel">New Product</h5>

                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                          </button>
                                        </div>

                                        <div class="modal-body">

                                          <form class="add-product" action="/product" method="POST">
                                            <div class="form-group">
                                              <input type="text" class="form-control" id="product_name" name="product[productName]" placeholder="Product Name">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" id="pcs_bundle" name="product[productPPB]" placeholder="Pieces Per Bundle">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" id="pcs_bundle" name="product[productBPS]" placeholder="Bundle Per Sako">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" id="pcs_bundle" name="product[productPI]" placeholder="Price Investment">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" id="pcs_bundle" name="product[productPBW]" placeholder="Price Based Wholesale">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" id="pcs_bundle" name="product[productPTW]" placeholder="Price Tubo Wholesale eg. 10">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="pcs_bundle" name="product[productPS]" placeholder="Product Size">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="pcs_bundle" name="product[productPUF]" placeholder="Product Used For">
                                            </div>
                                            <div class="form-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="inputGroupFile01" name="product[productIMG]">
                                                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                            </div>
                                            </div>                                           
                                            <div class="form-group">
                                                <select class="form-control" name="product[productCategory]">
                                                    <option>Plastic</option>
                                                    <option>Papel</option>
                                                    
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <select class="form-control" name="product[productCompany]">
                                                    <option>Calypso</option>
                                                    <option>Aguila</option>
                                                </select>
                                            </div>     
                                            <div class="modal-footer">
                                                 <!-- <button type="button" class="btn btn-secondary">Discard</button>
                                                 <button type="button" class="btn btn-primary">Save Product</button> -->
                                                 <input type="submit" class="btn btn-primary">
                                            </div>
                                          </form>

                                        </div>

                                        
                                      </div>
                                    </div>
                                  </div>

                            </div>
                            
                        </div>
                        
                        <table class="table table-striped">
                            <thead class="table-font">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">PCS per Bundle</th>
                                <th scope="col">Bundle per Sako</th>
                                <th scope="col">Used for</th>
                                <th scope="col">Size</th>
                                <th scope="col">Image</th>
                                <th scope="col">Category</th>
                                <th scope="col">Company</th>
                                
                            </tr>
                            </thead>

                            <tbody>
                             <% product.forEach(function(product) { %>
                                <tr>
                                    <th scope="row"><%= product.id %></th>
                                    <th scope="row"><%= product.product_name %></th>
                                    <th scope="row"><%= product.price_id %></th>
                                    <th scope="row"><%= product.product_pcs_per_bundle %></th>
                                    <th scope="row"><%= product.product_bundle_per_sako %></th>
                                    <th scope="row"><%= product.product_used_for %></th>
                                    <th scope="row"><%= product.product_size %></th>
                                    <th scope="row"><%= product.img_id %></th>
                                    <th scope="row"><%= product.category_id %></th>
                                    <th scope="row"><%= product.company_id %></th>
                                </tr>
                              <% }) %>

                           
                            
                           
                            </tbody>
                        </table>

                    </div>
                </div>


              </div>

           
            </div>
          </div>

        </div>
      </div>
    </section>

      
<%- include('partials/footer'); -%>